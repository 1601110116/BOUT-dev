[mesh]
staggergrids=true
nx=4
ny=32
nz=32
dy=2*Pi/ny
MXG=1
MYG=2
# use zshift that is periodic in y, because otherwise we need to make the input
# functions periodic in field-aligned coordinates, not just in y and z
zshift = exp(sin(y))
#paralleltransform = shifted
paralleltransform = shiftedinterp
