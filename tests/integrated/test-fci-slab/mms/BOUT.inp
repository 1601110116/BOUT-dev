grid = fci.grid.nc

nout = 1
timestep = 0.01

MZ = 64

NXPE = 1

[mesh]
paralleltransform = fci

symmetricglobalx = true

[fci]
y_periodic = false
z_periodic = false

[solver]
ATOL = 1e-12
RTOL = 1e-8
mms = true

[f]
solution = sin(y - 2*z)*cos(t) + sin(y - z)

source = -sin(t)*sin(y - 2*z) + 0.628318530717959*sin(y - z) + 0.628318530717959*cos(t)*cos(y - 2*z)

[g]
solution = -sin(y - 2*z)*cos(t) + cos(y - z)

source = sin(t)*sin(y - 2*z) - 0.628318530717959*cos(t)*cos(y - 2*z) - 0.628318530717959*cos(y - z)

